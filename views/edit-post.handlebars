<h2>Edit or Delete Post</h2>
<form class="card-body edit-post-form">
  <div class="form-row">
    <label for="post-title" class="form-label">Title</label>
    <input name="post-title" id="title" type="text" value="{{ if post }}{{post.title}}{{ endif }}" class="form-input form-control" />
  </div>
  <div class="form-row">
    <label class="form-label" for="content">Content</label>
    <input name="content" id="content" type="text" value="{{ if post }}{{post.content}}{{endif}}" class="form-input form-control" />
  </div>
<button id="update" type="submit" class="btn btn-primary">UPDATE POST</button>
<button id="delete" type="button" class="btn delete-post-btn btn-primary">DELETE POST</button>

</form>

<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>
